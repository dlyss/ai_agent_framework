# Application Settings
APP_NAME=AI Agent Framework
APP_ENV=development
DEBUG=true

# MySQL Database
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=your-mysql-password
MYSQL_DATABASE=ai_agent

# JWT Settings
JWT_SECRET_KEY=your-super-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_API_BASE=https://api.openai.com/v1

# Qwen (阿里通义千问)
DASHSCOPE_API_KEY=sk-your-dashscope-api-key

# LLaMA (本地或API)
LLAMA_MODEL_PATH=/path/to/llama/model
LLAMA_API_BASE=http://localhost:8080

# Milvus Vector Database
MILVUS_HOST=localhost
MILVUS_PORT=19530
MILVUS_USER=
MILVUS_PASSWORD=
MILVUS_DB_NAME=ai_agent

# Embedding Model
EMBEDDING_MODEL=BAAI/bge-base-zh-v1.5
EMBEDDING_DEVICE=cpu

# Default LLM Settings
DEFAULT_LLM_PROVIDER=openai
DEFAULT_MODEL_NAME=gpt-3.5-turbo
DEFAULT_TEMPERATURE=0.7
DEFAULT_MAX_TOKENS=2048

# Memory Settings
SHORT_TERM_MEMORY_SIZE=10
LONG_TERM_MEMORY_COLLECTION=long_term_memory

# Fine-tuning Settings
FINETUNE_OUTPUT_DIR=./finetune_output
FINETUNE_LOGGING_DIR=./finetune_logs
